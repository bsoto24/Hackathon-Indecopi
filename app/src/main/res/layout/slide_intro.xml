<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="@dimen/img_width"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/img_queja"
        app:layout_constraintBottom_toTopOf="@+id/tv_intro_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:text="Quejas y denuncias"
        android:textStyle="bold"
        android:theme="@style/TextViewTitleDark"
        app:layout_constraintBottom_toTopOf="@+id/tv_intro_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_intro" />

    <TextView
        android:id="@+id/tv_intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="Realizalas y dales seguimiento desde nuestro plataforma en linea"
        android:textAlignment="center"
        android:theme="@style/TextViewNormalDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro_title" />


</android.support.constraint.ConstraintLayout>

